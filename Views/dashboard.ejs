<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Analytics Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #f8f9fa;
      }
      .card-metric {
        text-align: center;
        padding: 20px;
      }
      .chart-container {
        max-width: 100%;
        height: 200px; /* Adjust height */
        margin-bottom: 20px; /* Optional spacing between charts */
      }
    </style>
  </head>
  <body>
    <div class="container-fluid p-4">
      <h2 class="mb-4">Booking Analytics Dashboard</h2>

      <!-- Top Metrics -->
      <div class="row mb-4">
        <div class="col-md-3">
          <div class="card card-metric shadow">
            <h5>Total Bookings (Month)</h5>
            <h3 id="totalBookings">-</h3>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card card-metric shadow">
            <h5>Repeat Customers</h5>
            <h3 id="repeatCustomers">-</h3>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card card-metric shadow">
            <h5>Avg. Lead Time</h5>
            <h3 id="avgLeadTime">-</h3>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card card-metric shadow">
            <h5>Top Service</h5>
            <h3 id="topService">-</h3>
          </div>
        </div>
      </div>

      <!-- Graphs Section -->
      <div class="row">
        <div class="col-md-8">
          <div class="card mb-4 shadow">
            <div class="card-body chart-container">
              <h5 class="card-title">Busiest Booking Times</h5>
              <canvas id="busiestTimeslotsChart"></canvas>
            </div>
          </div>
          <div class="card mb-4 shadow">
            <div class="card-body chart-container">
              <h5 class="card-title">Busiest Booking Times</h5>
              <canvas id="busiestDaysChart"></canvas>
            </div>
          </div>
          <div class="card mb-4 shadow">
            <div class="card-body chart-container">
              <h5 class="card-title">Bookings by Practitioner</h5>
              <canvas id="practitionerChart"></canvas>
            </div>
          </div>
        </div>

        <!-- Right Info Panel -->
        <div class="col-md-4">
          <div class="card mb-4 shadow">
            <div class="card-body">
              <h5>Recent Bookings</h5>
              <ul class="list-group" id="recentBookings"></ul>
            </div>
          </div>
          <div class="card shadow">
            <div class="card-body">
              <h5>Insights</h5>
              <p id="insightText">Loading insights...</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/js/dashboard.js"></script>
  </body>
</html>
